# ===========================================
# FYERS API v3 CONFIGURATION
# ===========================================

# Your Fyers Client ID (App ID from Fyers API Dashboard)
# Format: XXXXXXXXXX-100
# Get from: https://myapi.fyers.in/dashboard/
FYERS_APP_ID=

# Your Fyers Secret Key (from Fyers API Dashboard)
FYERS_SECRET_KEY=

# Redirect URI (must match what you set in Fyers Dashboard)
FYERS_REDIRECT_URI=http://localhost:8000/api/v1/auth/callback

# Access Token (will be generated after OAuth login)
# Leave empty initially - populated after authentication
FYERS_ACCESS_TOKEN=

# TOTP Secret (Optional - for automated daily login)
# Get this from your Fyers 2FA setup if you want auto-login
FYERS_TOTP_SECRET=

# Fyers User ID (your trading account ID)
FYERS_USER_ID=

# Fyers PIN (4-digit PIN for your account)
FYERS_PIN=

# ===========================================
# GROK API CONFIGURATION (For News Engine)
# ===========================================

# Get from: https://x.ai
GROK_API_KEY=
GROK_API_URL=https://api.x.ai/v1

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

DEBUG=false
CORS_ORIGINS=["http://localhost:3000"]
MAX_TRADES_PER_DAY=2
MIN_RISK_REWARD_RATIO=1.0
